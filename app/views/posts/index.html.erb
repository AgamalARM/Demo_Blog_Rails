<% content_for :page_title, "index" %>

<section class="section">
  <div class="container">
    <% @posts.each do |post|%>
    <div class="card">
      <div class="card-content">
        <div class="media">
          <div class="media-content">
            <p class="title is-4">title: <%= link_to  post.title, post%> </p>
          </div>
        </div>
        <div class="content">
          Body:  <%= post.body%>
        </div>
        <div class="comment-count">
          <span class="tag is-rounded">comment count:<%= post.comments.count%> comments</span>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</section>
